<import src="../../wxParse/wxParse.wxml"/>
<view class='hwrapper'>
  <view class="title">{{work.Title}}</view>
  <navigator url="../author-detail/author-detail?AuthorId={{work.AuthorId}}" class='author'>[{{work.Dynasty}}] {{work.AuthorName}}</navigator>
