  <view wx:else class='content indent'><template is="wxParse" data="{{wxParseData:content.nodes}}"/></view>

  <view class="title-red">评析</view>
  <view class='intro'><template is="wxParse" data="{{wxParseData:intro.nodes}}"/></view>
</view>